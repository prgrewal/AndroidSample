<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableLayout3"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center">
    <TableRow
        android:id="@+id/tableRowChat1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/txtFromUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#551a8b"
            android:layout_marginRight="10dp"
            android:fontFamily="cursive"
            android:text="From: "/>
        <Spinner
            android:id="@+id/spinner_Fchat_username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"></Spinner>
    </TableRow>
    <TableRow
        android:id="@+id/tableRowChat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/txtToUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#551a8b"
            android:layout_marginRight="10dp"
            android:fontFamily="cursive"
            android:text="To: "/>
        <Spinner
            android:id="@+id/spinner_Tchat_username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"></Spinner>
    </TableRow>
    <TableRow
        android:id="@+id/tableRowChat3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:gravity="center_horizontal">
        <EditText
            android:id="@+id/chat_msg"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/edittextregister"
            android:textColorHint="#000000"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"
            android:layout_span="2"
            android:inputType="textMultiLine"
            android:gravity="top"/>
    </TableRow>
    <TableRow
        android:id="@+id/tableRowChat4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/chatsend_btn"
            android:text="Send"
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#2D63A8"
            android:layout_span="2"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_marginBottom="125dp"
            />
    </TableRow>
</TableLayout>